@model OrderViewModel[]
@{
    ViewData["Title"] = "All Orders";
}


<h1 class="text-center">All Orders</h1>

<hr class="hr-2 bg-eventure" />
<table class="table">
    <thead class="">
        <tr class="row ">
            <th class="col-1 border-top-0">#</th>
            <th class="col-5 border-top-0">Event</th>
            <th class="col-2 border-top-0">Customer</th>
            <th class="col-4 border-top-0">Ordered On</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Length; i++)
        {
        <tr class="row">
            <th class="col-1 font-weight-normal">@(i+1)</th>
            <th class="col-5 font-weight-normal">@Model[i].EventName</th>
            <th class="col-2 font-weight-normal">@Model[i].CustomerName</th>
            <th class="col-4 font-weight-normal">@Model[i].OrderedOn.ToString("dd-MMM-yyyy HH:mm:ss")</th>
        </tr>
        }
    </tbody>
</table>
<hr class="hr-2 bg-eventure" />


